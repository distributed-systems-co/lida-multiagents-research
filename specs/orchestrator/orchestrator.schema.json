{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MetaOrchestratorPlan",
  "type": "object",
  "required": ["id", "timescales", "dag", "guards", "milestones", "budgets"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9_.:-]{3,128}$" },
    "label": { "type": "string" },
    "timescales": {
      "type": "object",
      "description": "Named time scales, e.g., T0/T1/T2",
      "minProperties": 1,
      "additionalProperties": { "type": "string", "description": "Human description" }
    },
    "dag": {
      "type": "object",
      "required": ["nodes", "edges"],
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "kind"],
            "properties": {
              "id": { "type": "string", "pattern": "^[a-z0-9_.:-]{1,64}$" },
              "kind": { "enum": ["action", "mediator", "outcome"] },
              "lag": { "type": "string", "description": "ISO 8601 duration or range (e.g., PT1H or PT1H..P7D)" },
              "guards": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
              "note": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "edges": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to"],
            "properties": {
              "from": { "type": "string" },
              "to": { "type": "string" },
              "lag": { "type": "string" },
              "note": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "guards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "enum": ["approval", "invariant", "kill"] },
          "expr": { "type": "string" },
          "owner": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "at"],
        "properties": {
          "id": { "type": "string" },
          "at": { "type": "string", "format": "date-time" },
          "gate": {
            "type": "object",
            "properties": {
              "approvals": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
              "kill_criteria": { "type": "array", "items": { "type": "string" }, "uniqueItems": true }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "budgets": {
      "type": "object",
      "properties": {
        "compute": { "type": "object", "additionalProperties": { "type": "number", "minimum": 0 } },
        "memory": { "type": "object", "additionalProperties": { "type": "number", "minimum": 0 } },
        "energy": { "type": "object", "additionalProperties": { "type": "number", "minimum": 0 } }
      },
      "additionalProperties": false
    },
    "observability": {
      "type": "object",
      "properties": {
        "topics": { "type": "array", "items": { "type": "string" } },
        "correlation": { "type": "string" }
      },
      "additionalProperties": true
    },
    "approvals": { "type": "object", "additionalProperties": { "type": "array", "items": { "type": "string" } } }
  }
}

